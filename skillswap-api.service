[Unit]
Description=SkillSwap API Server
After=network.target

[Service]
Type=simple
User=www-data
WorkingDirectory=/path/to/SkillSwap_42_1/server
Environment=NODE_ENV=production
Environment=PORT=3001
ExecStart=/usr/bin/node dist/index.js
Restart=always
RestartSec=10
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=skillswap-api

# Безопасность
NoNewPrivileges=true
PrivateTmp=true

# Ограничения ресурсов
LimitNOFILE=65536
MemoryMax=500M

[Install]
WantedBy=multi-user.target

